<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/RL1"
        android:layout_centerHorizontal="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="46px"
            android:textColor="#374C9F"
            android:textStyle="bold"
            android:text="Meet Our Team"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL2"
        android:layout_below="@+id/RL1"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Img2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fitri"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_below="@id/Img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitri Hutabarat"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RL3"
        android:layout_toRightOf="@id/RL2"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Img3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/jesica"/>
        <TextView
            android:layout_below="@id/Img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jesica Sianturi"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RL4"
        android:layout_below="@+id/RL2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Img4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/martin"/>
        <TextView
            android:layout_below="@id/Img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Martin Sitinjak"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RL5"
        android:layout_toRightOf="@id/RL4"
        android:layout_width="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Img5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rici"/>
        <TextView
            android:layout_below="@id/Img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Richye Manik"/>

    </RelativeLayout>
</RelativeLayout>
